rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Blog images
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Product images/models
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Collection images
    match /collections/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Builder assets (publicly readable, admin writable)
    match /public/builder/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Protected assets (paid downloads)
    match /protected/{allPaths=**} {
      allow read: if false;
      allow write: if request.auth != null;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
